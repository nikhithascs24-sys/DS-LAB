#include <stdio.h>
#include <stdlib.h>
struct node {
int data;
struct node *left, *right;
};
struct node* create(int value) {
struct node* newnode = (struct node*)malloc(sizeof(struct node));
newnode->data = value;
newnode->left = newnode->right = NULL;
return newnode;
}
struct node* insert(struct node* root, int value) {
if (root == NULL)
return create(value);
if (value < root->data)
root->left = insert(root->left, value);
else if (value > root->data)
root->right = insert(root->right, value);
return root;
}
void inorder(struct node* root) {
if (root != NULL) {
inorder(root->left);
printf("%d ", root->data);
inorder(root->right);
}
}
void preorder(struct node* root) {
if (root != NULL) {
printf("%d ", root->data);
preorder(root->left);
preorder(root->right);
}
}
void postorder(struct node* root) {
if (root != NULL) {
postorder(root->left);
postorder(root->right);
printf("%d ", root->data);
}
}
void display(struct node* root) {
printf("\nInorder : "); inorder(root);
printf("\nPreorder : "); preorder(root);
printf("\nPostorder : "); postorder(root);
printf("\n");
}
int main() {
struct node* root = NULL;
int choice, value;
while (1) {
printf("binary search tree\n");
printf("1. Insert\n");
printf("2. Inorder \n");
printf("3. Preorder \n");
printf("4. Postorder \n");
printf("5. Display all\n");
printf("6. Exit\n");
printf("Enter your choice: ");
scanf("%d", &choice);
switch (choice) {
case 1:
    printf("Enter value to insert: ");
    scanf("%d", &value);
    root = insert(root, value);

break;
case 2:
printf("Inorder: ");
inorder(root);
printf("\n");
break;
case 3:
printf("Preorder: ");
preorder(root);
printf("\n");
break;
case 4:
printf("Postorder: ");
postorder(root);
printf("\n");
break;
case 5:
display(root);
break;
case 6: printf("exitingg");
exit(0);
default:
printf("Invalid choice!\n");
}
}
return 0;
}
