#include <stdio.h>
#include <stdlib.h>
struct Node {
    int data;
    struct Node *next;
};
struct Node *temp = NULL;
void insertEnd(int value) {
    struct Node *newNode = (struct Node*)malloc(sizeof(struct Node));
    if (!newNode) {
        printf("Memory allocation failed\n");
        return;
    }
    newNode->data = value;
    newNode->next = NULL;

    if (temp == NULL) {
        temp = newNode;
        newNode->next = newNode;
    } else {
        newNode->next = temp->next;
        temp->next = newNode;
        temp = newNode;
    }
    printf("Inserted %d at end\n", value);
}
void insertBegin(int value) {
    struct Node *newNode = (struct Node*)malloc(sizeof(struct Node));
    if (!newNode) {
        printf("Memory allocation failed\n");
        return;
    }
    newNode->data = value;
    newNode->next = NULL;
    if (temp == NULL) {
        temp = newNode;
        newNode->next = newNode;
    } else {
        newNode->next = temp->next;
        temp->next = newNode;
    }
    printf("Inserted %d at beginning\n", value);
}
void deleteBegin() {
    if (temp == NULL) {
        printf("List is empty!\n");
        return;
    }
    struct Node *head = temp->next;
    if (head == temp) {
        printf("Deleted %d (only node)\n", head->data);
        free(head);
        temp = NULL;
    } else {
        temp->next = head->next;
        printf("Deleted %d from beginning\n", head->data);
        free(head);
    }
}
void deleteEnd() {
    if (temp == NULL) {
        printf("List is empty!\n");
        return;
    }
    struct Node *head = temp->next;
    if (head == temp) {
        printf("Deleted %d (only node)\n", temp->data);
        free(temp);
        temp = NULL;
        return;
    }
    struct Node *current = head;
    while (current->next != temp) {
        current = current->next;
    }
    current->next = head;
    printf("Deleted %d from end\n", temp->data);
    free(temp);
    temp = current;
}
void display() {
    if (temp == NULL) {
        printf("List is empty!\n");
        return;
    }
    struct Node *ptr = temp->next;
    printf("Circular List: ");
    do {
        printf("%d ", ptr->data);
        ptr = ptr->next;
    } while (ptr != temp->next);
    printf("\n");
}
int main() {
    int choice, value;
    while (1) {
        printf("\n--- Circular Linked List Menu ---\n");
        printf("1. Insert End\n");
        printf("2. Insert Begin\n");
        printf("3. Delete Begin\n");
        printf("4. Delete End\n");
        printf("5. Display\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter value to insert at end: ");
                if (scanf("%d", &value) == 1) insertEnd(value);
                else printf("Invalid input.\n");
                break;
            case 2:
                printf("Enter value to insert at beginning: ");
                if (scanf("%d", &value) == 1) insertBegin(value);
                else printf("Invalid input.\n");
                break;
            case 3:
                deleteBegin();
                break;
            case 4:
                deleteEnd();
                break;
            case 5:
                display();
                break;
            case 6:
                while (temp != NULL) {
                    deleteBegin();
                }
                printf("Exiting.\n");
                exit(0);
            default:
                printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}
